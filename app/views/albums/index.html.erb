<h1>Albums</h1>
<%= link_to 'New Album',new_album_path %>

<h1>Listing albums</h1>
 
<table>
  <tr>
    <th>Title</th>
  </tr>
 
  <% @album.each do |album| %>
    <tr>
      <td><%= image_tag album.cover.url %></td>
      <td><%= album.title %></td>
      <td><%= link_to 'Show', album_path(album) %></td>
      <td><%= link_to 'Edit', edit_album_path(album) %></td>
      <td><%= link_to 'Destroy', album_path(album),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= paginate @album %>